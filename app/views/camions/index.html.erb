<p style="color: green"><%= notice %></p>

<% content_for :title, "Camions" %>

<h1>Ingreso Camiones</h1>

<div class="mb-3">
  <%= link_to "Ingreso manual", new_camion_path, class: "btn btn-primary" %>
</div>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Posición</th>
      <th>Patente</th>
      <th>Tipo</th>
      <th>Lista</th>
      <th>Conductor</th>
      <th>Punto</th>
      <th>Estado</th>
      <th>Scraped at</th>
      <th class="text-end">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @camions.each do |camion| %>
      <tr>
        <td><%= camion.posicion %></td>
        <td><%= camion.patente %></td>
        <td><%= camion.tipo %></td>
        <td><%= camion.lista %></td>
        <td><%= camion.conductor %></td>
        <td><%= camion.punto %></td>
        <td><%= camion.estado %></td>
        <td><%= l(camion.scraped_at, format: :short) %></td>
        <td class="text-end">
          <%= link_to "Ver", camion, class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to "Editar", edit_camion_path(camion), class: "btn btn-sm btn-outline-primary" %>
          <%= link_to "Borrar", camion, method: :delete, data: { confirm: "¿Estás seguro?" }, class: "btn btn-sm btn-outline-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
